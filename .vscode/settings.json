{
	"files.eol": "\n",
	"eslint.workingDirectories": [
		"./src",
		"./frontend"		
	],
	"eslint.options": {
		"resolvePluginsRelativeTo": ".",
	},
	"eslint.validate": [
		"javascript",
		"vue",
	],
	"editor.tabSize": 4,
	"editor.insertSpaces": true,
	"[vue-html]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"[vue]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"[javascript]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"eslint.format.enable": true
}
